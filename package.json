{
  "name": "holo-rea",
  "private": true,
  "workspaces": [
    "modules/vf-graphql/lib",
    "modules/vf-graphql-holochain",
    "example/holorea-graphql-explorer",
    "test"
  ],
  "version": "0.0.1",
  "description": "A suite of Holochain apps implementing a ValueFlows-compatible REA economic network",
  "main": "/dev/null",
  "scripts": {
    "preinstall": "scripts/preinstall.sh",
    "postinstall": "scripts/postinstall.sh",
    "shell": "nix-shell holonix-0.0.28",
    "start": "npm run build; npm-run-all --parallel dev:graphql-adapter ui dht",
    "build": "npm-run-all build:dna_obs build:dna_plan",
    "build:dna_obs": "cd happs/observation && hc package",
    "build:dna_plan": "cd happs/planning && hc package",
    "dht": "holochain -c ./conductor-config.toml",
    "ui": "cd example/holorea-graphql-explorer && npm start",
    "dev": "npm-watch",
    "dev:graphql-adapter": "cd modules/vf-graphql-holochain && npm run dev",
    "test": "npm-run-all test:unit test:integration",
    "test:unit": "cargo test",
    "test:integration": "npm run build; cd test && npm test",
    "clean": "npm-run-all --parallel clean:modules clean:build",
    "clean:modules": "rm -Rf node_modules; rm -Rf test/node_modules; rm -Rf example/holorea-graphql-explorer/node_modules; rm -Rf modules/vf-graphql-holochain/node_modules; rm -Rf modules/vf-graphql/lib/node_modules",
    "clean:build": "scripts/clean-build.sh"
  },
  "watch": {
    "start": {
      "patterns": [
        "lib"
      ],
      "extensions": "rs"
    },
    "test": {
      "patterns": [
        "lib/test",
        "lib/dist"
      ],
      "extensions": "js,json"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/holo-rea/holo-rea.git"
  },
  "keywords": [
    "REA",
    "ValueFlows",
    "OpenValueNetwork",
    "Open Value Network",
    "OVN",
    "Holochain",
    "economic",
    "cooperative",
    "coordination"
  ],
  "author": "Holo-REA contributors",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/holo-rea/holo-rea/issues"
  },
  "homepage": "https://github.com/holo-rea/holo-rea#readme",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.6.0"
  }
}
